<%= simple_form_for expense, as: 'payment', :url => expense_payments_path(expense), :method => "post" do |e| %>
  <div class="col-xs-3">
    <%#= e.input :date, :as => :string %>
    <label for="paydate-field">* Date</label>
    <input id="paydate-field" name="payment[date]" class="form-control paydate" value=<%= expense.date.to_s %> />
  </div>
  <div class="col-xs-3">
    <% "Amt charged: #{expense.amt_charged.inspect}" %>
    <label for="amt-field-paid">* Amt To Pay:</label>
    <input id="amt-field-paid" name='payment[amt_paid]' type='number' min="0.00", max="100.00" step="0.01" class="form-control" value=<%= number_with_precision(expense.amt_remaining, precision: 2) %> /><br class="clr" />
    <%= e.submit 'Pay', :class => 'pay-button btn btn-success pull-right' %>
  </div>
  <div class="col-xs-3">              
    <%= e.association :responsible_party, :label_method => lambda {|party| party.name } %><br class="clr" />
    <input type="hidden" name="payment[card_id]" value="<%= expense.card.id %>" />
    <%= link_to 'Cancel', '#', :class => 'cancel-button btn btn-danger' %>
  </div>
  <div class="col-xs-3">
    <%= e.input :how_to_pay %>
  </div>
  <br class="clr" />
<% end %>

<script>
  $(function() {
    $('.paydate').datepicker({dateFormat: 'yy-mm-dd'});
  });
</script>