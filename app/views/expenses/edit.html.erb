<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h2>Edit expense</h2>
  
  <%= simple_form_for current_expense do |e| %>
    <%= e.input :date, error: "Please enter a date", input_html: { class: 'expense-date' } %><br />
    <%= e.input :retailer, error: "Who charged you?" %><br />
    <%= e.input :amt_charged, error: "How much they charged you was" %><br />
  
    <%= e.submit "Create", :class => "btn btn-info" %>
  <% end %>
</div>

<script>
  $(function() {
    $('.expense-date').datepicker();
  });
</script>